<h1>신문사</h1>

<table>
  <thead>
    <tr>
      <th>신문사이름</th>
      <th>기사</th>
      <th>기자</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newspapers.each do |newspaper| %>
      <tr>
        <td><%= newspaper.name %></td>
        <td><%= newspaper.article %></td>
        <td><%= newspaper.reporter %></td>
		  <td><%= link_to '내용확인', newspaper %></td>
        <td><%= button_to '신문구독', platforms_path(platform: {user_id: current_user.id, newspaper_id: newspaper.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

